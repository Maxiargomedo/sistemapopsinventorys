    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "rxjs": "7.8.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.5",
    "@nestjs/schematics": "10.1.3",
    "@nestjs/testing": "10.4.7",
