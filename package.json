{
  "name": "sistema-ventas-inventario",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo: POS + Inventario para comida rÃ¡pida (Next.js + NestJS + PostgreSQL)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.17",
    "npm": ">=9"
  },
  "scripts": {
    "build": "npm run -w apps/web build && npm run -w apps/api build",
    "dev": "npm-run-all --parallel api:dev web:dev",
    "start": "npm-run-all --parallel api:start web:start",
    "api:dev": "npm run -w apps/api dev",
    "web:dev": "npm run -w apps/web dev",
    "api:start": "npm run -w apps/api start",
    "web:start": "npm run -w apps/web start",
    "lint": "echo 'add linters'",
    "format": "echo 'add formatter'"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
